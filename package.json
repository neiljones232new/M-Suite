{
  "name": "m-suite",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "turbo run dev",
    "portal": "pnpm -C apps/portal dev",
    "portal:desktop": "pnpm -C apps/portal-desktop tauri:dev",
    "portal:desktop:build": "pnpm -C apps/portal-desktop tauri:build",
    "suite": "concurrently \"pnpm portal\" \"pnpm practice\" \"pnpm practice-api\" \"pnpm customs\" \"pnpm customs-backend\"",
    "practice": "pnpm -C external/M-Practice-Manager dev:up web",
    "practice-stop": "pnpm -C external/M-Practice-Manager dev:down web",
    "practice-api": "pnpm -C external/M-Practice-Manager dev:up api",
    "practice-api-stop": "pnpm -C external/M-Practice-Manager dev:down api",
    "customs": "pnpm --prefix external/M-Customs-Manager run dev",
    "customs-backend": "pnpm --prefix external/M-Customs-Manager/backend run dev",
    "open:apps": "wait-on http://localhost:3000 http://localhost:5173 && open http://localhost:4000",
    "suite:open": "concurrently \"pnpm suite\" \"pnpm open:apps\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "sass": "^1.97.3",
    "turbo": "^2.8.8",
    "wait-on": "^9.0.4"
  }
}
