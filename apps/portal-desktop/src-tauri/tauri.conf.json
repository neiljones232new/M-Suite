{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "M-Suite Portal",
  "version": "0.1.0",
  "identifier": "com.msuite.portal",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:4174",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "M-Suite Portal",
        "width": 1180,
        "height": 860,
        "minWidth": 900,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "12.0"
    }
  }
}
